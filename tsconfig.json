{
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
        "customConditions": [
            "node"
        ],
        "lib": [
            "es2022",
            "esnext.disposable"
        ],
        "module": "es2022",
        "moduleResolution": "Bundler",
        "verbatimModuleSyntax": true
    },
    "include": [
        "src/",
        "tests/"
    ],
    "exclude": [
        "node_modules/"
    ]
}
