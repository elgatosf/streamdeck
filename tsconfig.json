{
	"extends": "@tsconfig/node20/tsconfig.json",
	"compilerOptions": {
		"customConditions": [
			"node"
		],
		"lib": [
			"es2022",
			"esnext.disposable"
		],
		"module": "ES2022",
		"moduleResolution": "Bundler"
	},
	"include": [
		"scripts/**/*.ts",
		"src/**/*.ts",
		"rollup.config.ts",
		"tests/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}