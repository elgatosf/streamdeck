{
	"name": "@elgato/streamdeck",
	"version": "0.1.0-beta.0",
	"description": "The official Node.js SDK for creating Stream Deck plugins.",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist/**/*.d.ts",
		"dist/**/*.js",
		"schemas/**/*.json"
	],
	"scripts": {
		"build": "rm -rf ./dist/ && tsc --project tsconfig.build.json",
		"generate-schemas": "ts-node ./scripts/generate-schemas.ts",
		"lint": "eslint . --ext .ts --max-warnings 0",
		"lint:fix": "prettier --config .prettierrc src/**/*.ts --write",
		"prepublishOnly": "npm run prepare-dist",
		"preversion": "npm run prepare-dist",
		"prepare-dist": "npm run build && npm test && npm run lint",
		"test": "jest",
		"test:coverage": "jest --coverage",
		"test:watch": "jest --watch",
		"watch": "nodemon --watch \"src/**\" --ext \"ts\" --exec \"npm run build\""
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/elgatosf/streamdeck.git"
	},
	"keywords": [
		"elgato",
		"stream-deck",
		"plugins",
		"sdk"
	],
	"author": {
		"name": "Elgato",
		"url": "https://www.elgato.com"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/elgatosf/streamdeck/issues"
	},
	"homepage": "https://github.com/elgatosf/streamdeck#readme",
	"devDependencies": {
		"@babel/core": "^7.22.5",
		"@babel/preset-env": "^7.22.5",
		"@babel/preset-typescript": "^7.22.5",
		"@trivago/prettier-plugin-sort-imports": "^4.1.1",
		"@tsconfig/node20": "^1.0.0",
		"@types/jest": "^29.5.2",
		"@types/node": "^20.1.2",
		"@types/ws": "^8.5.4",
		"@typescript-eslint/eslint-plugin": "^5.59.5",
		"@typescript-eslint/parser": "^5.59.5",
		"babel-jest": "^29.5.0",
		"chalk": "^5.3.0",
		"eslint": "^8.40.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-jsdoc": "^44.2.3",
		"eslint-plugin-prettier": "^4.2.1",
		"jest": "^29.5.0",
		"nodemon": "^2.0.22",
		"prettier": "^2.8.8",
		"ts-jest": "^29.1.1",
		"ts-json-schema-generator": "^1.2.0",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.4"
	},
	"dependencies": {
		"ws": "^8.13.0"
	}
}
